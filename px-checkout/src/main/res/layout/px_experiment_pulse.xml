<?xml version="1.0" encoding="utf-8"?>
<com.mercadopago.android.px.internal.view.PulseRippleView android:id="@+id/pulse_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="62dp"
    android:layout_height="match_parent"
    android:background="@drawable/px_background_opacity"
    android:gravity="center"
    app:rb_color="#4c009ee3"
    app:rb_duration="1000"
    app:rb_radius="12dp"
    app:rb_rippleAmount="1"
    app:rb_scale="2"
    tools:layout_height="60dp">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/px_xs_margin"
        android:background="@null"
        android:scaleType="center"
        app:srcCompat="@drawable/px_circle_arrow" />

</com.mercadopago.android.px.internal.view.PulseRippleView>
